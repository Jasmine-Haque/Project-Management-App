<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Responsive Dashboard</title>
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
   <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

   <link rel="stylesheet" href="../css/dashboard.css">
</head>

<body>
   <div class="container">
      <aside>
         <div class="top-icon">
            <div class="logo">
               <img src="../images/logo.png" alt="">
               <!-- <h2>WORK <span class="danger">STREAMLINE</span></h2> -->
            </div>
            <div class="close" id="close-btn">
               <span class="material-icons-sharp">close</span>
            </div>
         </div>

         <div class="sidebar">
            <a href="#" class="active">
               <span class="material-icons-sharp">grid_view</span>
               <h3>Dashboard</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">person_outline</span>
               <h3>Customers</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">receipt_long</span>
               <h3>Orders</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">insights</span>
               <h3>Analytics</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">mail_outline</span>
               <h3>Messages</h3>
               <span class="message-count">28</span>
            </a>
            <a href="#">
               <span class="material-icons-sharp">inventory</span>
               <h3>Products</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">report_gmailerrorred</span>
               <h3>Reports</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">settings</span>
               <h3>Settings</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">add</span>
               <h3>Add Product</h3>
            </a>
            <a href="#">
               <span class="material-icons-sharp">logout</span>
               <h3>Logout</h3>
            </a>
         </div>

      </aside>

      <main>

         <div class="right">
            <div class="top">
               <button id="menu-btn">
                  <span class="material-icons-sharp">menu</span>
               </button>
               <div class="profile-theme">

                  <div class="profile">
                     <div class="info">
                        <p>Hey, <b>Saleha Mariyam</b></p>
                        <small class="text-muted">Admin</small>
                     </div>
                     <div class="profile-photo">
                        <img src="../images/profile.jpeg" alt="">
                     </div>
                  </div>
                  <div class="theme-toggler">
                     <span class="material-icons-sharp active">light_mode</span>
                     <span class="material-icons-sharp">dark_mode</span>
                  </div>
               </div>

            </div>
            
            <div class="notification-date">
               <div class="theme-toggler-1">
                  <span class="material-icons-sharp active">light_mode</span>
                  <span class="material-icons-sharp">dark_mode</span>
               </div>
               <h1>Dashboard</h1>
               <div class="date-theme">
                  <div class="calender">
                     <div class="left-calender">
                        <p id="date">04</p>
                        <p id="day">Saturday</p>
                     </div>
                     <div class="right-calender">
                        <p id="month">November</p>
                        <p id="year">2023</p>
                     </div>
                  </div>
               </div>

            </div>

         </div>

         <!-- PROJECT DASHBOARD -->
         <div class="project-container">

            <div class="left-project">
               <div class="create-project">
                  <h1>Projects</h1>
                  <div class="add-project">
                     <span class="material-symbols-outlined">add_circle</span>
                     <h1>Create Project</h1>
                  </div>
               </div>

               <div class="project-section">
                  <div class="started-project">
                     <div class="start">
                        <h2>Started</h2>
                        <span class="material-symbols-outlined">add_circle</span>
                     </div>

                     <div class="box">
                        <button class="project-name">
                           <h3>Project 1</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 2</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 3</h3>
                        </button>

                     </div>

                  </div>

                  <div class="Ongoing-project">
                     <div class="start">
                        <h2>On Going</h2>
                        <span class="material-symbols-outlined">add_circle</span>
                     </div>

                     <div class="box">
                        <button class="project-name">
                           <h3>Project 1</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 2</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 3</h3>
                        </button>

                     </div>

                  </div>

                  <div class="completed-project">
                     <div class="start">
                        <h2>Completed</h2>
                        <span class="material-symbols-outlined">add_circle</span>
                     </div>

                     <div class="box">
                        <button class="project-name">
                           <h3>Project 1</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 2</h3>
                        </button>
                        <button class="project-name">
                           <h3>Project 3</h3>
                        </button>

                     </div>

                  </div>
               </div>

            </div>

            <div class="right-project">
               <div class="team">
                  <h1>Team</h1>
                  <span class="material-symbols-outlined">
                     groups_2
                  </span>
               </div>

               <div class="project-progress">
                  <div class="middle">
                     <div class="left-item">
                        <h2>Total Projects</h2>
                        <h3>2430</h3>
                     </div>

                     <div class="total-progress-container">
                        <div class="circular-progress" id="circular-1">
                           <span class="progress-value" id="progress-1">0%</span>
                        </div>
                     </div>

                  </div>

                  <div class="middle">
                     <div class="left-item">
                        <h2>Completed</h2>
                        <h3>985</h3>
                     </div>

                     <div class="completed-progress-container">
                        <div class="circular-progress" id="circular-2">
                           <span class="progress-value" id="progress-2">0%</span>
                        </div>
                     </div>

                  </div>

                  <div class="middle">
                     <div class="left-item">
                        <h2>In Progress</h2>
                        <h3>350</h3>
                     </div>

                     <div class="in-progress-container">
                        <div class="circular-progress" id="circular-3">
                           <span class="progress-value" id="progress-3">0%</span>
                        </div>

                     </div>

                  </div>

                  <div class="middle">
                     <div class="left-item">
                        <h2>Waiting</h2>
                        <h3>180</h3>
                     </div>

                     <div class="waiting-progress-container">
                        <div class="circular-progress" id="circular-4">
                           <span class="progress-value" id="progress-4">0%</span>
                        </div>
                     </div>

                  </div>
               </div>

            </div>
         </div>

   </div>

   </main>

   </div>

   <script src="../js/dashboard.js"></script>
</body>

</html>